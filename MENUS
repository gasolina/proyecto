		cout << "\nEscoja una opcion: \n";
		cin >> o;
		system("cls");
		switch (o)
		{
		case 1:getch();
			break;
		case 2: getch();
			break;
		case 3:reportesmenu();
			   getch();
				break;
		case 4:ABMreporte();
			getch();
			break;
		case 0: cout << "SALIR";
			break;
		default: cout << "ERROR";
			getch();
			break;
		}
		system("cls");
	} while (o!=0);
}
