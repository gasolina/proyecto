bool validaremail(char e[])// PENDIENTE REVISAR!!!!!
{
	int n,i,cont=0;
	n = strlen(e);
	if(n<7)
	return false;
		if (e[n - 1] != 'm'||e[n - 2] != 'o'||e[n - 3]!= 'c'||e[n - 4]!= '.')
			return false;


	if (e[0] == '@')
		return false;
	for (i = 1; i < n-5; i++)
	{
		e[i] == '@';
		cont++;
		
	}
	if (cont != 1)
	{
		return false;
	}
	else
	{
		return true;
	}
}
