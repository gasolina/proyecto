//estructuras
struct venta{
	int idventa;
	char fecha[10];
	int idprod;
	float cantidad;
	float preciototal;
	int idbomba;
	int idauto;
	char estado;
};
struct automotor{
	int idauto;
	char placa[10];
	int idcliente;
	char estado;
};
struct cliente{
int idcliente;
char nombre[30];
char email[30];
char telefono[12];
char nit[10];
char estado;
};
struct vendedor{
int idvendedor;
char nombre[30];
char email[30];
char telefono[12];
char estado;
};
struct producto{
int idprod;
char nombre[30];
float preciounit;
float stock;
char estado;
};
struct compras{
int idcompra;
char fecha[10];
int idprod;
float cantidad;
float preciototal;
};
struct bomba{
int idbomba;
char descripcion[30];
int idprod;
int idvendedor;
};
