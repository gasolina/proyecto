			fread(&ven,sizeof(ven),1,ptr);
			while(feof(ptr)==false && ven.idvendedor!=x)
			{
				fread(&ven,sizeof(ven),1,ptr);
			}
			fclose(ptr);
			if(ven.estado=='S')
			return ven;
		}
}
